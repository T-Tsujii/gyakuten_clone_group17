  <section id="question">
    <div class="title">
      <h3>【質問】</h3>
      <%= markdown(@question.title).html_safe %>
    </div>
    <hr>
    <div class="detail">
      <h3>【詳細】</h3>
      <%= markdown(@question.detail).html_safe %>
    </div>
    <!-- 回答がない場合は表示しない -->
    <% @solutions.each.with_index(1) do |sol, i|  %>
      <hr>
      <div class="solution">
        <%# 回答が一つの場合は【回数】、複数ある場合は【回答x】とする %>
        <% if @solutions.count == 1 %>
          <h3>【回答】</h3>
        <% else %>
          <h3>【回答<%= i %>】</h3>
        <% end %>
        <%= markdown(sol.answer).html_safe %>
      </div> 
    <% end %>
    <div class="container">
      <h1>回答投稿</h1>
      <%= form_with(url: "/question/#{@question.id}/solutions") do |f| %>
        <div class="form-group">
          <%= f.label :answer, "【回答】" ,class: "control-label" %>
        </div>
        <div class="form-group">
          <%= f.text_area :answer ,rows: 5, class: "form-control initial-height" %>
        </div>
        <div class="form-group">
          <%= f.submit "送信", class: "btn btn-primary btn-block btn-lg" , data: {confirm: "投稿しますか？"} %>
        </div>
      <% end %>
    </div>

  </section>
