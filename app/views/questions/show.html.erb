<div id="container">
  <section id="question">
    <div class="title">
    <h3>【質問】</h3>
      <%= markdown(@question.title).html_safe %>
      <hr>
    </div>
    <div class="detail">
      <h3>【詳細】</h3>
      <%= markdown(@question.detail).html_safe %>
      <hr>
    </div>
    <div class="solution">
      <% solutions.each.with_index(1) do |solution, i| %>
       <h3>【回答】</h3>
      <%= markdown(@solution.detail).html_safe %>
      <hr>
    </div>
    <div class= "detail">
     <div class="text-left">
      <h2>回答投稿</h2>
     </div>
     <%= form_with model:[@question,@solution], local: true do |form| %>
     <div class="form-group d-flex flex-column">
       <%= form.label :detail, "【回答】" %>
       <%= form.text_area :detail, rows: 5,class: "form-control"  %>
     </div>

      <div class="text-center">
        <%= form.submit "送信", class: "btn btn-primary btn-block btn-lg" %>
      </div>
     <% end %>
    </div>
  
  </section>
</div>

