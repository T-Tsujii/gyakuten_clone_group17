 <section id="question">
    <div class="title">
      <h3>【質問】</h3>
      <%= markdown(@question.title).html_safe %>
    </div>
    <hr>
    <div class="detail">
      <h3>【詳細】</h3>
      <%= markdown(@question.detail).html_safe %>
    </div>
    
    <div class="container">
      <h1>回答投稿</h1>
      <%= form_with(url: "/questions/#{@question.id}/solutions", local: true) do |f| %>
        <div class="form-group">
          <%= f.label :answer, "【回答】" ,class: "control-label" %>
        </div>
        <div class="form-group">
          <%= f.text_area :answer ,rows: 5, class: "form-control initial-height" %>
        </div>
        <div class="form-group">
          <%= f.submit "送信", class: "btn btn-primary btn-block btn-lg" , data: {confirm: "投稿しますか？"} %>
        </div>
      <% end %>
    </div>

  </section>
