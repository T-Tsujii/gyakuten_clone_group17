<div class="container">
  <div class="questions">
    <div class="text-center">
      <h2>新規投稿</h2>
    </div>
    <%= form_with url: questions_path, model: @question, local: true do |form| %>
      <div class="form-group d-flex flex-column">
        <%= form.label :title, "【質問】" %>
        <%= form.text_area :title, rows: 3,class: "form-control" %>
      </div>
      <div class="form-group d-flex flex-column">
        <%= form.label :detail, "【詳細】" %>
        <%= form.text_area :detail, rows: 5,class: "form-control"  %>
      </div>
      <div class="text-center">
        <%= form.submit "送信", class: "btn btn-primary btn-block btn-lg" %>
      </div>
    <% end %>
    <div class="text-center">
      <% @questions.each do |question| %>
        <p>
          <%= question.title %>
        </p>
      <% end %>
    </div>
  </div>
</div>