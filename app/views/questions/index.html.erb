<div class="container">
  <div class="questions">
    <div class="text-left">
      <h2>新規投稿</h2>
      <%= render "devise/shared/error_messages" %>
    </div>
    
    <%= form_with url: questions_path, model: @question, local: true do |form| %>
      <div class="form-group d-flex flex-column">
        <%= form.label :title, "【質問】" %>
        <%= form.text_area :title, rows: 3,class: "form-control" %>
        </div>
      <div class="form-group d-flex flex-column">
        <%= form.label :detail, "【詳細】" %>
        <%= form.text_area :detail, rows: 5,class: "form-control"  %>
      </div>
      <div class="text-center">
        <%= form.submit "送信", class: "btn btn-primary btn-block btn-lg", data: {confirm: "新規投稿しますか？"} %>
      </div>
    <% end %>

    <section id="questions">
    <div class="container">
      <% @questions.each do |question| %>
        <div class="question-container">    
         <a href="<%= "/questions/#{question.id}" %>">
          <div class="question">
            <div class="rowtitle">
              <div class="col-md-7">
                <div class="title-container">
                  <p class="questiontitle">
                    <%= question.title %>
                  </p>
                </div>
              </div>
                <div class="col-md-5">
                  <div class="info-text-right">
                  <p>質問日 <%= l question.updated_at, format: :long %></p>
                  <%= pluralize(question.reviews_count, "views", locale: :en) %>
                  </div>
                </div>
            </div>
          </div>

          </a>
        </div>
      <% end %>
    </div>
  </section>